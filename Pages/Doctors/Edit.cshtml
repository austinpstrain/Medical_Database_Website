                @Html.LabelFor(m => m.Doctor.Person.Address.City, new { @class = "control-label" })
                @Html.EditorFor(m => m.Doctor.Person.Address.City)
                @Html.ValidationMessageFor(m => m.Doctor.Person.Address.City)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Doctor.Person.Address.State, new { @class = "control-label" })
