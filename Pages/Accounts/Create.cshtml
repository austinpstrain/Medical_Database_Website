                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.Patient.Person.Phone, new { @class = "control-label" })
                    @Html.EditorFor(m => m.Patient.Person.Phone)
                    @Html.ValidationMessageFor(m => m.Patient.Person.Phone)
                </div>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

</body>
</html>