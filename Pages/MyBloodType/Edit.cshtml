@page
@model ClinicWeb.Pages.MyBloodType.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BloodType.BloodTypeId" />
            <div class="form-group">
                @Html.LabelFor(m => m.BloodType.Name, new { @class = "control-label" })
                @Html.EditorFor(m => m.BloodType.Name)
                @Html.ValidationMessageFor(m => m.BloodType.Name)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
