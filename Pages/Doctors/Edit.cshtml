                @Html.ValidationMessageFor(m => m.Doctor.Person.LastName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Doctor.Person.Dob, new { @class = "control-label" })
                @Html.EditorFor(m => m.Doctor.Person.Dob)
                @Html.ValidationMessageFor(m => m.Doctor.Person.Dob)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Doctor.Person.Phone, new { @class = "control-label" })
                @Html.EditorFor(m => m.Doctor.Person.Phone)
                @Html.ValidationMessageFor(m => m.Doctor.Person.Phone)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Doctor.Person.Address.StreetAddress, new { @class = "control-label" })
                @Html.EditorFor(m => m.Doctor.Person.Address.StreetAddress)
                @Html.ValidationMessageFor(m => m.Doctor.Person.Address.StreetAddress)
            </div>
