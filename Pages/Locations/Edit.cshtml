@page
@model ClinicWeb.Pages.Locations.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Office.OfficeId" />
            <input type="hidden" asp-for="Office.AddressId" />
            <div class="form-group">
                @Html.LabelFor(m => m.Office.Address.StreetAddress, new { @class = "control-label" })
                @Html.EditorFor(m => m.Office.Address.StreetAddress)
                @Html.ValidationMessageFor(m => m.Office.Address.StreetAddress)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Office.Address.State, new { @class = "control-label" })
                @Html.EditorFor(m => m.Office.Address.State)
                @Html.ValidationMessageFor(m => m.Office.Address.State)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Office.Address.City, new { @class = "control-label" })
                @Html.EditorFor(m => m.Office.Address.City)
                @Html.ValidationMessageFor(m => m.Office.Address.City)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Office.Address.PostalCode, new { @class = "control-label" })
                @Html.EditorFor(m => m.Office.Address.PostalCode)
                @Html.ValidationMessageFor(m => m.Office.Address.PostalCode)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Office.Phone, new { @class = "control-label" })
                @Html.EditorFor(m => m.Office.Phone)
                @Html.ValidationMessageFor(m => m.Office.Phone)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to Office Locations</a>
</div>
