@page
@model ClinicWeb.Pages.Orders.UpdateModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Order.OrderId" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Order.PrescriptionId, new { @class = "control-label" })
                @Html.EditorFor(m => m.Order.PrescriptionId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(m => m.Order.PrescriptionId)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Order.OfficeId, new { @class = "control-label" })
                @Html.EditorFor(m => m.Order.OfficeId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(m => m.Order.OfficeId)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Order.Created, new { @class = "control-label" })
                @Html.EditorFor(m => m.Order.Created, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(m => m.Order.Created)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Order.DateArrived, new { @class = "control-label" })
                @Html.EditorFor(m => m.Order.DateArrived)
                @Html.ValidationMessageFor(m => m.Order.DateArrived)
            </div>
        </div>
        
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>

</form>
